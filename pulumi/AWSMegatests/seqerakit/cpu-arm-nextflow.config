aws.batch.maxSpotAttempts=5
process {
    maxRetries = 2
    errorStrategy = { task.exitStatus in ((130..145) + 104 + 175) ? 'retry' : 'terminate' }
    publishDir = [
        path: { params.outdir },
        mode: 'copy',
        tags: [
            'compute_env': 'aws_ireland_fusionv2_nvme_cpu_ARM_snapshots',
            'pipeline': { workflow.manifest.name },
            'session': { workflow.sessionId },
            'timestamp': { new Date().format('yyyy-MM-dd_HH-mm-ss') },
            'architecture': 'arm64',
            'fusion': 'enabled',
            'fusionSnapshots': 'enabled'
        ]
    ]
}
fusion {
    tags = '[.command.*|.exitcode|.fusion.*](nextflow.io/metadata=true),[*](nextflow.io/temporary=true)'
}